{
  "name": "node-lambda-crud",
  "version": "1.0.0",
  "description": "CRUD Example using AWS::LAMBDA::FUNCTION & AWS::DYNAMODB:TABLE",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require ts-node/register --extensions ts --watch --watch-files app 'app/test/src/**/*.spec.ts'",
    "test:lambda": "mocha --require ts-node/register --extensions ts app 'app/test/e2e/lambda/**/*.spec.ts'",

    "build": "npm run build:typescript && npm run build:compress && rm -r src",
    "build:typescript": "tsc --build",
    "build:compress": "lambda-zip .zipbuild built.zip -a -v",

    "serve": "start npm run serve:localstack",
    "serve:localstack": "cd aws && docker-compose up",

    "setup": "npm run build && sh aws/env-setup.sh",
    "update": "npm run build && sh aws/update-lambda-code.sh"
  },
  "author": {
    "name": "Angel Ricardo Ram√≠rez de la Torre",
    "email": "angelricardo.dev@gmail.com"
  },
  "contributors": [],
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.10",
    "aws-sdk": "^2.774.0",
    "chai": "^4.2.0",
    "lambda-zip": "^0.3.2",
    "mocha": "^8.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
